APP_NAME=IMDC
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=imdc
DB_USERNAME=postgres
DB_PASSWORD=

FEATURE_EXCHANGE=false
FEATURE_VR_TOUR=false
FEATURE_MEZON=false
FEATURE_DAO=false
FEATURE_PHARMA=false

# Optional admin bootstrap (used by AdminFromEnvSeeder)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# CORS
CORS_ENABLE=true
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With,X-Trace-Id,X-User-Id
CORS_EXPOSE_HEADERS=X-RateLimit-Limit,X-RateLimit-Remaining,Retry-After,Trace-Id
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=600
CORS_STRICT_ORIGINS=
CORS_DOCS_ORIGINS=*

# Rate limit
RATE_LIMIT_PER_MIN=120
RATE_LIMIT_BURST=60
RATE_LIMIT_ENABLE=true
RATE_LIMIT_EXEMPT_IPS=127.0.0.1

# Pagination
IMDC_PAGINATION_DEFAULT=20
IMDC_PAGINATION_MAX=100

# Backup & Logs
BACKUP_DIR=storage/app/backups
BACKUP_RETENTION_DAYS=14
LOG_RETENTION_DAYS=30
BACKUP_SCHEDULE_ENABLE=false
BACKUP_SCHEDULE_AT=03:00

# Mail (adjust for your SMTP)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@imdc.local"
MAIL_FROM_NAME="IMDC"

# Sentry (optional)
SENTRY_LARAVEL_DSN=
SENTRY_ENV=local
SENTRY_RELEASE=
