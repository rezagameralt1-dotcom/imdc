@php
$siteName = \App\Models\Setting::get('site_name', config('app.name', 'DigitalCity'));
$title = ($metaTitle ?? null) ? ($metaTitle.' | '.$siteName) : $siteName;
$desc = $metaDescription ?? \App\Models\Setting::get('site_tagline', 'Welcome to DigitalCity');
@endphp
<title>{{ $title }}</title>
<meta name="description" content="{{ $desc }}">
<meta property="og:title" content="{{ $title }}">
<meta property="og:description" content="{{ $desc }}">
<meta property="og:type" content="website">

